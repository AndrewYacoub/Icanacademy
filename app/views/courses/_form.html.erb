<%= form_with(model: @course, local: true, html: { class: 'form-horizontal' }) do |form| %>
  <% if @course.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h4>
      <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :title, class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= form.text_area :description, class: 'form-control', rows: 5 %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-sm-9 offset-sm-3">
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
