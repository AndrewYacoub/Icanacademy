<h1 class="mb-4">Homeworks</h1>

<div class="d-flex justify-content-end mb-3">
  <%= link_to 'New Homework', new_course_group_homework_path(@group.course, @group), class: 'btn btn-primary' %>
</div>

<div class="row">
  <% @homeworks.each do |homework| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= link_to homework.title, course_group_homework_path(@group.course, @group, homework), class: 'stretched-link' %></h5>
          <p class="card-text"><%= homework.description.truncate(100) %></p>
          <div class="mt-auto">
            <%= link_to 'Edit', edit_course_group_homework_path(@group.course, @group, homework), class: 'btn btn-outline-secondary btn-sm me-2' %>
            <%= link_to 'Delete', course_group_homework_path(@group.course, @group, homework), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
