<style>
  .form-heading {
    text-align: center; /* Center align the heading */
    font-size: 2rem; /* Set base font size */
    font-weight: bold; /* Make the heading bold */
    color: #333; /* Set heading color */
    margin-top: 20px; /* Add space above */
    margin-bottom: 20px; /* Add space below */
  }
</style>
<h1 class="form-heading">Homeworks</h1>
<% if current_user.type == "Teacher" %>
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Homework', new_course_group_homework_path(@group.course, @group), class: 'btn btn-primary' %>
  </div>
<% end %>
<div class="row">
  <% @homeworks.each do |homework| %>
    <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%=  homework.title %></h5>
          <p class="card-text"><%= homework.description.truncate(100) %></p>
          <div class="mt-auto d-flex justify-content-space-between">
            <%= link_to 'show', course_group_homework_path(@group.course, @group, homework), class: 'btn btn-outline-success btn-sm me-2' %>
            <%= link_to 'Edit', edit_course_group_homework_path(@group.course, @group, homework), class: 'btn btn-outline-secondary btn-sm me-2' %>
            <%= button_to 'Delete', course_group_homework_path(@group.course, @group, homework), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
