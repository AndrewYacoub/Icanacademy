<style>
  .user_img, .user_img_msg {
  width: 40px;
  height: 40px;
}

.online_icon {
  position: absolute;
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background-color: #4cd137;
  bottom: 2px;
  right: 2px;
  border: 2px solid white;
}

.msg_cotainer, .msg_cotainer_send {
  max-width: 60%;
  background-color: #f1f1f1;
  border-radius: 10px;
  padding: 10px;
  position: relative;
}

.msg_cotainer_send {
  background-color: #007bff;
  color: white;
}

.msg_time, .msg_time_send {
  font-size: 12px;
  position: absolute;
  bottom: -15px;
}

.msg_time_send {
  right: 0;
  color: rgba(255, 255, 255, 0.5);
}

.msg_time {
  left: 0;
  color: rgba(0, 0, 0, 0.5);
}

.img_cont_msg {
  width: 40px;
  height: 40px;
}

.card-body.msg_card_body {
  overflow-y: auto;
  height: 400px;
}

</style>
<div class="row">
  <!-- Side Panel: User List and Rooms -->
  <div class="col-md-12 col-lg-5 col-xl-4">
    <div class="card">
      <div class="card-header pt-4 pb-4">
        <div class="input-group">
          <input type="text" class="form-control bg-white" placeholder="Search users...">
          <div class="input-group-append">
            <button type="button" class="btn btn-primary">
              <i class="fa fa-search" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="chat">
        <ul class="contacts mb-0">
          <%= turbo_stream_from "users" %>
          <div id="users" class="mb-4">
            <ul class="list-group list-group-flush">
              <%= render @users %>
            </ul>
          </div>
          <% if @group %>
            <h2 class="card-subtitle text-dark mb-3">Rooms</h2>
            <% unless @rooms %>
            <%= render partial: "layouts/new_room_form" %>
            <%else%>
            <%= turbo_stream_from "rooms" %>
            <div id="rooms">
              <ul class="list-group list-group-flush">
                <%= render @rooms %>
              </ul>
            </div>
            <%end%>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Chat Area -->
  <div class="col-md-12 col-lg-7 col-xl-8 chat">
    <div class="card">
      <!-- Chat Header -->
      <div class="action-header clearfix">
        <div class="float-left hidden-xs d-flex ml-2">
          <div class="align-items-center mt-2">
            <h4 class="text-white mb-0 font-weight-semibold"><%= @user&.first_name %> <%= @user&.last_name %></h4>
            <span class="dot-label bg-success"></span><span class="mr-3 text-white">Online</span>
          </div>
        </div>
      </div>
      
      <!-- Chat Body -->
      <div class="card-body msg_card_body">
        <%= turbo_stream_from @single_room %>
        <div id="messages" class="mb-4" data-controller="scroll">
          <%= render @messages %>
        </div>
      </div>
      
      <!-- Chat Footer -->
      <div class="card-footer">
        <%= render partial: 'layouts/new_message_form' %>
      </div>
    </div>
  </div>
</div>
