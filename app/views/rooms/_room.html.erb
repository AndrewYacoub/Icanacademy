<% isActive = (@single_room && @single_room.name == room.name) ? 'active' : '' %>
<%= link_to course_group_room_path(room.group.course, room.group, room), 
  class: "list-group-item room_list_item #{isActive} d-flex justify-content-between align-items-center" do %>
  <%= room.name %>
  <span class="badge badge-light badge-pill"><%= room.messages.count %></span>
<% end %>
