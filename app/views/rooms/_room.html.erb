
<% is_active_class = @single_room&.name == room.name ? 'active' : '' %>

<%= link_to course_group_room_path(room.group.course, room.group, room), class: "list-group-item room_list_item #{is_active_class} d-flex justify-content-between align-items-center" do %>
  <div class="d-flex justify-content-between w-100">
    <span class="room-name"><%= room.name %></span>
    <div class="d-flex align-items-center">
      <span class="badge badge-light badge-pill mr-2"><%= room.messages.count %></span>
        <% if current_user == @room_creator%>

      <%= button_to "Delete", 
                    course_group_room_path(room.group.course, room.group, room), 
                    method: :delete, 
                    class: "btn btn-danger btn-sm",
                    data: { confirm: 'Are you sure you want to delete this room?' } %>
      <%end%>
    </div>
  </div>
<% end %>

