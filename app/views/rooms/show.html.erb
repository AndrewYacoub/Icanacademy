<div id="chatroom_container" class="container-fluid py-4 bg-white text-light">
  <div class="row">
    <!-- Room Container -->
    <div id="room_container" class="col-md-8 col-sm-12">
      <% if @single_room %>
        <div id="single_room" class="card bg-white text-light shadow-lg rounded-lg">
          <div class="card-body">
            <h4 class="card-title text-center mb-4">
              <%= @user&.email || @single_room.name %>
            </h4>
            <%= turbo_stream_from @single_room %>
            <div id="messages" class="mb-4" data-controller="scroll">
              <%= render @messages %>
            </div>
            <%= render partial: 'messages/message' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
