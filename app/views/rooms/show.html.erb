<div id="chatroom_container" class="container-fluid py-4 bg-dark text-light">
  <div class="row">
    <!-- Side Panel -->
    <div id="side_panel" class="col-md-4 col-sm-12 mb-4">
      <div class="card bg-secondary text-light shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Hi <%= current_user.email %></h5>
          <h4 class="card-subtitle mb-3">Users</h4>
          <%= turbo_stream_from "users" %>
          <div id="users" class="mb-4">
            <ul class="list-group list-group-flush">
              <%= render @users %>
            </ul>
          </div>
          <h4 class="card-subtitle mb-3">Rooms</h4>
          <%= render partial: "room" %>
          <%= turbo_stream_from "rooms" %>
          <div id="rooms">
            <ul class="list-group list-group-flush">
              <%= render @rooms %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Room Container -->
    <div id="room_container" class="col-md-8 col-sm-12">
      <% if @single_room %>
        <div id="single_room" class="card bg-dark text-light shadow-sm">
          <div class="card-body">
            <h4 class="card-title text-center mb-4">
              <%= @user&.email || @single_room.name %>
            </h4>
            <%= turbo_stream_from @single_room %>
            <div id="messages" class="mb-4" data-controller="scroll">
              <%= render @messages %>
            </div>
            <%= render partial: 'messages/message' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
